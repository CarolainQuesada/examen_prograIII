<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="780.0" prefWidth="1043.0"
            style="-fx-background-color: linear-gradient(to bottom, #f6faff, #dbe7ff);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.lab.examen_prograiii.ui.MainController">

    <children>

        <Label layoutX="20" layoutY="15"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a4f8b;"
               text="Cliente GitHub API" />

        <TextField fx:id="txtUsername" layoutX="20" layoutY="60" prefWidth="260"
                   promptText="Ingrese nombre de usuario..." />
        <Button layoutX="300" layoutY="60" onAction="#onBuscar"
                style="-fx-background-color: #1a4f8b; -fx-text-fill: white; -fx-font-weight: bold;"
                text="Buscar" />

        <ImageView fx:id="imgAvatar" fitHeight="120" fitWidth="120" layoutX="680" layoutY="20"
                   preserveRatio="true"
                   style="-fx-border-color: #c0c0c0; -fx-border-width: 1; -fx-background-color: white;" />

        <TextArea fx:id="txtOutput" editable="false"
                  layoutX="20" layoutY="110"
                  prefHeight="320" prefWidth="630"
                  style="-fx-control-inner-background: #f9fcff; -fx-font-family: 'Consolas'; -fx-font-size: 13px;"
                  wrapText="true" />

        <Label layoutX="20" layoutY="450"
               style="-fx-font-size: 18px; -fx-text-fill: #1a4f8b; -fx-font-weight: bold;"
               text="DistribuciÃ³n de lenguajes en repositorios" />

        <PieChart fx:id="chartLanguages"
                  layoutX="100" layoutY="480"
                  prefHeight="260" prefWidth="600"
                  style="-fx-background-color: transparent;"
                  legendVisible="false"
                  labelsVisible="true" />

    </children>
</AnchorPane>
